<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string-array name="days_of_week">
        <item>Sunday</item>
        <item>Monday</item>
        <item>Tuesday</item>
        <item>Wednesday</item>
        <item>Thursday</item>
        <item>Friday</item>
        <item>Saturday</item>
    </string-array>
    <string-array name="expense_categories">
        <item>Food</item>
        <item>Transport</item>
        <item>Entertainment</item>
        <item>Bills</item>
        <item>Shopping</item>
    </string-array>
    <color name="black">#FF121212</color>
    <color name="dark_gray">#FF1E1E1E</color>
    <color name="gray_aa">#AAAAAA</color>
    <color name="ic_launcher_background">#F7F7F7</color>
    <color name="lime_green">#FF00FF00</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">Finance Tracker</string>
    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/lime_green</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">8dp</item>
    </style>
    <style name="EditTextStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_aa</item>
        <item name="boxStrokeColor">@color/lime_green</item>
        <item name="hintTextColor">@color/gray_aa</item>
        <item name="android:backgroundTint">@color/lime_green</item>
    </style>
    <style name="ExpenseItemStyle">
        <item name="android:background">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="GreenButton" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/button_green</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextAppearance.FinanceTracker" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.FinanceTracker" parent="Theme.Material3.DayNight.NoActionBar">

        
        <item name="android:windowSplashScreenBackground">@color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenAnimationDuration">500</item>

        
        <item name="colorPrimary">@color/lime_green</item>
        <item name="colorOnPrimary">@color/black</item>

        
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>

        
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="textInputStyle">@style/EditTextStyle</item>
    </style>
    <style name="Theme.FinanceTracker.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">500</item> 
        <item name="postSplashScreenTheme">@style/Theme.FinanceTracker</item>
    </style>
</resources>